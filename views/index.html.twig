{% extends "layout.html.twig" %}

{% set page_title = 'Accueil' %}

{% block content %}
	{% for episode in episodes %}
		{% if episode.draft == '0' %}{# N'afiche pas les Ã©pisodes au statu de brouillon #}
			<episode>
			    <h2><a class="episodeTitle" href="{{ path('episode', { 'id': episode.id }) }}">{{ episode.title }}</a></h2>
