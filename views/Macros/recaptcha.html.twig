{#views/Macros/recaptcha.html.twig#}
{# 
 # The recaptcha method allow you to render a reCAPTCHA element. It expects as first parameter the site key
 #}
{% macro recaptcha(siteKey)%}
	<label class="col-sm-2 control-label required" for="comment_content">Validez le reCAPTCHA</label>
	<script src='https://www.google.com/recaptcha/api.js?hl=fr'></script>
    <div class="col-sm-10 g-recaptcha" data-sitekey="{{siteKey}}"></div>
{% endmacro %}